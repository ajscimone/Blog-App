<% include ./partials/header %>


<div class="ui container text segment">
    <div class="ui huge header"><%=blog.title%></div>
    <div class = "ui top attached ">
        <div class="item">
                <img class="ui centered rounded image" src="<%=blog.image%>">
                <div class = "content">
                    <span><%=blog.created.toDateString() %></span>
                </div>
                <hr>
                <div class = "description segment">
                    <p><%-blog.body%></p>
                </div>
                    <form class="ui form" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                        
                        <a href = "/blogs/<%= blog._id %>/edit" class="ui yellow basic button">Edit</a> 
                        
                        <button class="ui red basic button" type = "submit">Delete</button>                       
                    </form>
        </div>
    </div>
</div>



<% include ./partials/footer %>